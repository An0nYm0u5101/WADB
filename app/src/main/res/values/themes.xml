<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light" parent="Theme.Material.Light.LightStatusBar">
        <item name="android:colorPrimary">?appBarColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/white</item>

        <item name="preferenceTheme">@style/ThemeOverlay.Preference</item>
        <item name="appBarStyle">@style/Widget.AppBar.Solid</item>
        <item name="appBarColor">@color/material_teal_600</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_color</item>
    </style>

    <style name="Theme" parent="Theme.Material">
        <item name="android:colorPrimary">?appBarColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <item name="preferenceTheme">@style/ThemeOverlay.Preference</item>
        <item name="appBarStyle">@style/Widget.AppBar.Solid</item>
        <item name="appBarColor">@android:color/black</item>

        <item name="colorPrimary">@color/material_teal_200</item>
        <item name="colorPrimaryVariant">@color/material_teal_200</item>
        <item name="colorSecondary">@color/material_teal_200</item>
        <item name="colorSecondaryVariant">@color/material_teal_200</item>
    </style>

    <style name="ThemeOverlay.Preference" parent="PreferenceThemeOverlay" />

    <style name="Widget.AppBar.Solid" parent="Widget.Material.ActionBar.Solid">
        <item name="android:background">?appBarColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/app_bar_elevation</item>
        <item name="android:theme">?actionBarTheme</item>
    </style>

</resources>