    <style name="Theme.Light" parent="Theme.Design.Light.LightStatusBar">
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">?android:colorBackground</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="preferenceTheme">@style/ThemeOverlay.Preference</item>
        <item name="appBarStyle">@style/Widget.AppBar.Light</item>
    </style>

    <style name="Theme" parent="Theme.Design">
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:colorAccent">@color/material_teal_200</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:popupTheme">@android:style/ThemeOverlay.Material.Dark.ActionBar</item>
        <item name="preferenceTheme">@style/ThemeOverlay.Preference</item>
        <item name="appBarStyle">@style/Widget.AppBar</item>
    </style>

    <style name="ThemeOverlay.Preference" parent="PreferenceThemeOverlay">
        <item name="simpleMenuPreferenceStyle">@style/ThemeOverlay.Preference.SimpleMenu</item>
    </style>

    <style name="ThemeOverlay.Preference.SimpleMenu" parent="Preference.SimpleMenuPreference">
        <item name="popupStyle">@style/ThemeOverlay.Preference.SimpleMenu.Popup</item>
    </style>

    <style name="ThemeOverlay.Preference.SimpleMenu.Popup" parent="Preference.SimpleMenuPreference.Popup">
        <item name="android:popupBackground">@drawable/simplemenu_background</item>
        <item name="listElevation">8dp</item>
    </style>

    <style name="Widget.AppBar" parent="Widget.Design.ActionBar">
        <item name="android:background">@color/material_blue_grey_700</item>
        <item name="android:theme">?android:actionBarTheme</item>
        <item name="android:stateListAnimator">@animator/alpha_animator</item>
        <item name="android:elevation">@dimen/app_bar_elevation</item>
    </style>

    <style name="Widget.AppBar.Light">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:stateListAnimator">@animator/appbar_animator</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>